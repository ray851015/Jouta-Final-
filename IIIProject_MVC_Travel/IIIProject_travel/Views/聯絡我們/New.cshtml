@model IEnumerable<tActivity>

@{
    Layout = null;
    var x = (tMember)Session["member"];
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>聯絡我們 | Jouta</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/sass/style.css">
    <link rel="stylesheet" href="~/Content/css/聯絡我們.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">

    

</head>

<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-fixed-top" id="main">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Home", "Home")">
                    @*改用Url.Action*@
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <div class="navbar-header">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "Index", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">

                        <li class="nav-item">@Html.ActionLink("關於我們", "About", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("聯絡我們", "New", "聯絡我們", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        @if (Session["member"] != null)
                        {


                            <li class="nav-item nav-link nav-login text-dark">@Html.ActionLink("您好，" + x.f會員名稱, "ProfileIndex", "Profile") </li>

                            <li class="nav-item">@Html.ActionLink("登出", "Home", "Home", new { id = 0 }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        else
                        {


                            <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>

                            <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- Page Content -->
    <div class="mt-5"></div>
    <div>
        <h2 style="text-align:center">聯絡我們</h2>
    </div>
    <form method="post"  id="xx">
        <p class="mb-5" style="text-align: center;" >我們十分重視您的寶貴意見與問題，我們將竭誠儘速為您服務</p>


        <div class="container" style="margin-bottom: 5rem;">

            <fieldset>
                <legend><img src="~/Content/images/letter.jpg" class="imgLetter" alt="" width="100" id="fordemo"></legend>
                <div class="st1">
                    
                    <div class="op" style="text-align: center;">
                        <select name="f意見類型" required>
                            <option value="">請選擇</option>
                            <option value="旅遊意見">旅遊意見</option>
                            <option value="飯局意見">飯局意見</option>
                            <option value="文章意見">文章意見</option>
                            <option value="其他意見">其他意見</option>
                        </select>
                    </div>


                    <div class="form-group col-md-6" style="text-align: center ;margin: 20px auto;">
                        <label for="">標題</label>
                        <input type="text" class="form-control" id="title" placeholder="請輸入標題" name="f標題" size="8" required>
                    </div>



                    <div class="form-group col-md-6" style="text-align: center ;margin: 20px auto;">
                        <label for="exampleInputEmail1">信箱</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="請輸入電子郵件" name="f電子郵件" size="12" onblur="validateEmail(this.value)" required>
                    </div>



                    <div class="form-group col-md-6" style="text-align: center ;margin: 20px auto;">
                        <label for="">聯絡人</label>
                        <input type="text" class="form-control" id="post聯絡人" aria-describedby="emailHelp" placeholder="請輸入聯絡人名稱" name="f聯絡人" size="9" required>
                    </div>
                    <div style="text-align: center;">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn  btn-outline-success">
                                <input type="radio" name="f性別" id="sexbtn1" autocomplete="off" value="男性" required> 先生
                            </label>
                            <label class="btn  btn-outline-success">
                                <input type="radio" name="f性別" id="sexbtn2" autocomplete="off" value="女性"> 女士
                            </label>
                        </div>
                    </div>


                    <div class="form-group col-md-6" style="text-align: center ;margin: 20px auto;">
                        <label>電話</label>
                        <input type="text" class="form-control" id="phone" placeholder="輸入電話" name="f電話" size="12" pattern="^09\d{8}$" required>
                    </div>


                    <div style="text-align:center;">
                        <div class="form-group w-50 " style="  margin: 0 auto;">
                            <label for="exampleFormControlTextarea1">意見</label>
                            <textarea class="form-control" id="comment" rows="3" name="f意見" required></textarea>
                        </div>
                    </div>
                    <div class="text-danger" style="display:none;">@ViewBag.ll</div>
                    <div class="sub">
                        <button type="submit" class="btn btn-success" id="btn123">送出</button>
                        <button type="reset" class="btn btn-success">取消</button>
                    </div>

                </div>
            </fieldset>
            <div>
                <p class="pb" style="width:1000px">本信箱的郵件處理時間為一般工作日上午 8 點 30 分至下午 5 點 30 分</p>
            </div>

        </div>
   
    </form>

    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">&copy; @DateTime.Now.Year Jouta All rights reserved</p>
    </div>

    <!-- script -->
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/IIIProject/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
    <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.7/semantic.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/IIIProject/聯絡我們New.js"></script>
    <script src="~/Scripts/IIIProject/navbar.js"></script>
    <script>
        
      
        @if (ViewBag.ll == "傳送成功") {
           @: okTrans();
        }


 
        function okTrans() {
            swal("成功寄送!",
                { icon: "success"});
            setTimeout(function () {window.location.href="/聯絡我們/New" }, 5000)
        };
        

                @*@if (ViewBag.message== "新密碼重置成功!") {
            @:setTimeout(function(){
                @:location.href = "/Home/Home"
            @:}, 5000);
        }*@
    </script>
</body>

</html>