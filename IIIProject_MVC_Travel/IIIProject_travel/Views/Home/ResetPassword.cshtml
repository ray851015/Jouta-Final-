@model IIIProject_travel.ViewModel.CReset
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>重置密碼 | Jouta </title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sass/style.css" rel="stylesheet" />
    <link href="~/Content/css/resetpassword.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/css/all.css" rel="stylesheet" />
    <style>
        #eye,#eye1 {
            float: right;
            position: relative;
            bottom: 30px;
            right: 10px;
            color: black;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-fixed-top">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Home", "Home")">
                    @*改用Url.Action*@
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                @*<div class="navbar-header" id="main">*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*</div>*@
                <div class="navbar-collapse collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "Index", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>


    <div class="realoutercontainer">
        <div class="outercontainer" style="top:100px;">
            <div class="outercontainer2">
                <div class="outercontainer3">
                    <div class="outercontainer4">
                        <h2 id="xx">修改密碼</h2>
                        <div class="form-horizontal">
                            @using (Html.BeginForm())
                            {
                                if (ViewBag.Message != null)
                                {
                                <div class="alert alert-warning text-danger">
                                    @ViewBag.Message
                                </div>

                                }

                                <div class="form-group">
                                    @Html.LabelFor(model => model.newPassword, new { @class = "col-xs-4 col-md-3 form-label", style = "float:left;" })
                                    <div class="col-xs-8 col-md-11 fg-block">
                                        @Html.PasswordFor(model => model.newPassword, new { @class = "form-control" ,id="newpassword"})
                                        <span id="eye"><i class="fas fa-eye"></i></span>
                                        @Html.ValidationMessageFor(model => model.newPassword, null, new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.newPassword_confirm, new { @class = "col-xs-4 col-md-4 form-label", style = "float:left;" })
                                    <div class="col-xs-8 col-md-11 fg-block">
                                        @Html.PasswordFor(model => model.newPassword_confirm, new { @class = "form-control", id = "newpassword_confirm" })
                                        <span id="eye1"><i class="fas fa-eye"></i></span>
                                        @Html.ValidationMessageFor(model => model.newPassword_confirm, null, new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.HiddenFor(a => a.resetCode)
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-10 fg-block mt-4">
                                        <input class="btn btn-success" type="submit" value="修改密碼" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="common-rectangleGrid original">
            <!-- Background -->
            <div class="backgroundContainer">
                <div class="grid">
                    <div class="background"></div>
                </div>
            </div>
            <!-- rectangles -->
            <div class="rectangleContainer">
                <div class="grid">
                    <div class="rectangle"></div>
                    <div class="rectangle"></div>
                    <div class="rectangle"></div>
                    <div class="rectangle"></div>
                    <div class="rectangle"></div>
                    <div class="rectangle"></div>
                    <div class="rectangle"></div>
                </div>
            </div>
        </div>
    </div>


    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">&copy; @DateTime.Now.Year Jouta All rights reserved</p>
    </div>
    <!-- script -->
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/IIIProject/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script>
        @if (ViewBag.message== "新密碼重置成功!") {
            @:setTimeout(function(){
                @:location.href = "/Home/Home"
            @:}, 2000);
        }
    </script>
    <script>
        $("#xx").click(function () {
            $("#newpassword").val("pika123456");
            $("#newpassword_confirm").val("pika123456");
        });
    </script>
    <script>
        $('#eye').click(function () {
            icon = $(this).find("i");
            if (icon.hasClass("fa-eye")) {
                $("#newpassword").attr("type", "text");
                icon.addClass("fa-eye-slash").removeClass("fa-eye");
            } else {
                $("#newpassword").attr("type", "password");
                icon.addClass("fa-eye").removeClass("fa-eye-slash");
            }
        }); 

        $('#eye1').click(function () {
            icon = $(this).find("i");
            if (icon.hasClass("fa-eye")) {
                $("#newpassword_confirm").attr("type", "text");
                icon.addClass("fa-eye-slash").removeClass("fa-eye");
            } else {
                $("#newpassword_confirm").attr("type", "password");
                icon.addClass("fa-eye").removeClass("fa-eye-slash");
            }
        }); 
    </script>
</body>

</html>