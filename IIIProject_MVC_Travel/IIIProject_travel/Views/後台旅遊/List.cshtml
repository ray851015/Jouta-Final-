﻿@using PagedList
@using PagedList.Mvc

@{
    Layout = null;
}
@model IPagedList<IIIProject_travel.tActivity>

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="generator" content="">
    <title>旅遊列表 | Jouta Admin</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/css/dashboard.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
        }

        #line {
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 300px;
            white-space: nowrap;
        }
        #line1 {
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
            white-space: nowrap;
        }


        .table td, .table th {
            vertical-align: middle;
        }
    </style>

</head>

<body>

    @*navbar*@
    <form action="/後台旅遊/List" method="GET">
        <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="@Url.Action("Home","後台Home")">
                <img src="~/Content/images/joutalogo.png" width="14" class="mr-2" />Jouta Admin
            </a>
            <div>
                <span class="badge badge-secondary">建立起日：</span>
                <input type="date" name="date起日" />
            </div>
            <div>
                <span class="badge badge-secondary">建立迄日：</span>
                <input type="date" name="date迄日" />
            </div>
            <input type="text" placeholder="關鍵字" aria-label="Search" name="txt關鍵字" class="form-control form-control-dark w-100">
            <input type="submit" value="搜尋" class=" btn btn-secondary" />
            <ul class="navbar-nav px-3">
                <li class="nav-item text-nowrap">
                    <a>
                        @Html.ActionLink("Sign out", "Home", "Home", new { id = 0 }, new { @class = "nav-link" })
                    </a>
                </li>
            </ul>
        </nav>
    </form>

    @*sidebar*@
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Home","後台Home")">
                                <span data-feather="home"></span>
                                網站概覽
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","後台會員")">
                                <span data-feather="users"></span>
                                會員列表
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","後台旅遊")">
                                <span data-feather="file"></span>
                                旅遊列表　<
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","後台飯局")">
                                <span data-feather="bar-chart-2"></span>
                                飯局列表
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","後台文章")">
                                <span data-feather="layers"></span>
                                文章列表
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","聯絡我們")">
                                <span data-feather="message-square"></span>
                                意見列表
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","優惠發送")">
                                <span data-feather="gift"></span>
                                優惠發送
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            @*主內容*@
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h2>旅遊列表</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <td>@Html.ActionLink("編號", "List", new { sortOrder = ViewBag.編號排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("帳號", "List", new { sortOrder = ViewBag.帳號排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("標題", "List", new { sortOrder = ViewBag.標題排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("內容", "List", new { sortOrder = ViewBag.內容排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("點讚", "List", new { sortOrder = ViewBag.點讚排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("建立時間", "List", new { sortOrder = ViewBag.建立時間排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("招募截止時間", "List", new { sortOrder = ViewBag.招募截止時間排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("開始時間", "List", new { sortOrder = ViewBag.開始時間排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("結束時間", "List", new { sortOrder = ViewBag.結束時間排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("地點", "List", new { sortOrder = ViewBag.地點排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("地區", "List", new { sortOrder = ViewBag.地區排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("預算", "List", new { sortOrder = ViewBag.預算排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>@Html.ActionLink("分類", "List", new { sortOrder = ViewBag.分類排序, dateStartFilter = ViewBag.當前起日, dateEndFiler = ViewBag.當前迄日, currentFilter = ViewBag.當前搜尋 })</td>
                                <td>按鈕</td>
                                <td>按鈕</td>

                            </tr>
                        </thead>

                        <tbody>

                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.f活動編號)</td>
                                        <td>@Html.DisplayFor(modelItem => item.tMember.f會員名稱)</td>
                                        <td id="line1">@Html.DisplayFor(modelItem => item.f活動標題)</td>
                                        <td id="line">@Html.DisplayFor(modelItem => item.f活動內容)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動讚數)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動發起日期).ToString().Substring(0, 10)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動招募截止時間)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動開始時間)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動結束時間)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動地點)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動地區)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動預算)</td>
                                        <td>@Html.DisplayFor(modelItem => item.f活動分類)</td>
                                        <td>
                                            @Html.ActionLink("查看", "v查看", "後台旅遊", new { id = item.f活動編號 }, new { Class = "btn btn-info" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("刪除", "d刪除", "後台旅遊", new { id = item.f活動編號 },
                                           new { OnClick = "return confirm('確定要刪除嗎?')", Class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
                </div>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="~/Scripts/jquery-slim.min.js"><\/script>')</script>
    <script src="~/Content/bootstrap-4.5.2-dist/js/bootstrap.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
    <script src="~/Scripts/IIIProject/dashboard.js"></script>
</body>

</html>